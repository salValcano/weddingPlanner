<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.deepanshub.weddingplanner.budgetPlanner.BudgetCalc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budget Calculator"
        android:textSize="30dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/budget"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Budget" />

    <EditText
        android:id="@+id/catering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Catering" />

    <EditText
        android:id="@+id/venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Venue" />

    <EditText
        android:id="@+id/officiate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Officiate" />

    <EditText
        android:id="@+id/photographer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Photographer" />

    <EditText
        android:id="@+id/dj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DJ" />

    <EditText
        android:id="@+id/miscellaneous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Misellaneous" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Total = â‚¹ " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"

            />
    </LinearLayout>
</LinearLayout>
